{
    "name": "djthossi/phpunit-in-four-parts",
    "description": "phpunit in four parts",
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Sebastian Thoss",
            "email": "dj_thossi@web.de",
            "homepage": "http://www.sebastianthoss.de"
        }
    ],
    "autoload": {
        "psr-4": {
            "DjThossi\\PHPUnit\\": "src/",
            "DjThossi\\PHPUnit\\UnitTest\\": "tests/Unit",
            "DjThossi\\PHPUnit\\IntegrationTest\\": "tests/Integration",
            "DjThossi\\PHPUnit\\AcceptanceTest\\": "tests/Acceptance",
            "DjThossi\\PHPUnit\\SmokeTest\\": "tests/SmokeTest"
        }
    },
    "config": {
        "sort-packages": true
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "djthossi/smoke-testing-php": "^1.10"
    },
    "require": {
        "php": ">=7.3"
    }
}
